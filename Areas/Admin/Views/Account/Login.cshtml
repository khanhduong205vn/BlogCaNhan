

@{
    ViewData["Title"] = "Đăng nhập quản trị";
}
<style>
    body {
        min-height: 100vh;
        background: #f6f8fa;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .login-minimal {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .login-card {
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 4px 32px 0 rgba(0,0,0,0.08);
        padding: 2.5rem 2rem 2rem 2rem;
        width: 100%;
        max-width: 370px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }
    .login-title {
        font-size: 1.6rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.2rem;
        color: #222;
    }
    .login-desc {
        font-size: 1.04rem;
        color: #888;
        text-align: center;
        margin-bottom: 0.8rem;
    }
    .form-group {
        margin-bottom: 1.1rem;
    }
    .form-control {
        border-radius: 0.7rem;
        border: 1px solid #e0e3e7;
        font-size: 1.08rem;
        padding: 1rem 1.1rem;
        width: 100%;
        background: #f9fafb;
        transition: border-color 0.2s;
    }
    .form-control:focus {
        border-color: #4f8cff;
        outline: none;
        background: #fff;
    }
    .login-btn {
        width: 100%;
        padding: 0.9rem 0;
        border-radius: 0.7rem;
        background: #4f8cff;
        color: #fff;
        font-weight: 600;
        font-size: 1.08rem;
        border: none;
        transition: background 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px 0 rgba(79,140,255,0.10);
        margin-bottom: 0.3rem;
    }
    .login-btn:hover, .login-btn:focus {
        background: #2563eb;
        color: #fff;
        box-shadow: 0 4px 16px 0 rgba(79,140,255,0.18);
    }
    .login-footer {
        font-size: 0.98rem;
        color: #aaa;
        text-align: center;
        margin-top: 1.5rem;
    }
    .alert {
        font-size: 1rem;
        border-radius: 0.6rem;
        padding: 0.8rem 1rem;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>


<div class="login-minimal">
    <div class="login-card">
        <div class="login-title">Đăng nhập quản trị</div>
        <div class="login-desc">Vui lòng nhập thông tin để tiếp tục</div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form asp-action="Login" method="post" autocomplete="off">
            <div class="form-group">
                <input type="text" class="form-control" id="Username" name="Username" required autofocus placeholder="Tên đăng nhập" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="Password" name="Password" required placeholder="Mật khẩu" />
            </div>
            <button type="submit" class="login-btn">Đăng nhập</button>
        </form>
        <div class="login-footer">
            &copy; @DateTime.Now.Year - Blog Quản trị. Powered by ASP.NET Core
        </div>
    </div>
</div>
